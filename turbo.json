{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "start:dev": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "start:debug": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "start:prod": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["ts/swapi/src/**/*.ts", "ts/swapi/test/**/*.ts", "test/**/*.ts"]
    },
    "test:watch": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["ts/swapi/src/**/*.ts", "ts/swapi/test/**/*.ts", "test/**/*.ts"],
      "persistent": true
    },
    "test:cov": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["ts/swapi/src/**/*.ts", "ts/swapi/test/**/*.ts", "test/**/*.ts"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["ts/swapi/src/**/*.ts", "ts/swapi/test/**/*.ts", "test/jest-e2e.json"]
    },
    "lint": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "typeorm": {
      "dependsOn": ["build"],
      "cache": false
    },
    "migration:generate": {
      "dependsOn": ["build"],
      "cache": false
    },
    "migration:run": {
      "dependsOn": ["build"],
      "cache": false
    },
    "migration:revert": {
      "dependsOn": ["build"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "docker:up": {
      "cache": false
    },
    "docker:down": {
      "cache": false
    },
    "docker:build": {
      "cache": false
    }
  }
}
